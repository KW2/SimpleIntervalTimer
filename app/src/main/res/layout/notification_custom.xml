<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="94dp">


    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_alignParentLeft="true"/>


    <Button
        android:id="@+id/notification_endBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="X"/>
    <Button
        android:id="@+id/notification_spBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/notification_endBtn"
        android:text="||"/>

    <TextView
        android:id="@+id/notification_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/notification_spBtn"
        android:layout_toRightOf="@id/notification_icon"
        android:layout_centerInParent="true"
        android:text="1/3 - 00:00"
        android:gravity="center"/>

</RelativeLayout>