<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/bottomline">

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFFFFF"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapBrand="danger"
        app:bootstrapSize="xl"
        app:materialIcon="md_delete"
        app:roundedCorners="true"
        android:id="@+id/item_deleteBtn"
        android:layout_alignParentRight="true"
        android:text="삭제"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_timeName"
        android:layout_toLeftOf="@id/item_deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록명"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/item_timeValue"
        android:layout_below="@id/item_timeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="3 / 05:00 / 00:10"
        android:textSize="20dp"
        android:layout_marginLeft="3dp"
        />


</RelativeLayout>